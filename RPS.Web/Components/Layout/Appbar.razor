<div class="AppbarBootstrap"
    style="width: 1440px; height: 54px; justify-content: flex-start; align-items: center; display: inline-flex">
    <div class="Appbar"
        style="flex: 1 1 0; height: 54px; padding-left: 16px; padding-right: 16px; padding-top: 8px; padding-bottom: 8px; background: rgba(3.84, 86.84, 98.16, 0.06); box-shadow: 0px 6px 13px rgba(0, 0, 0, 0.12); justify-content: space-between; align-items: center; display: flex">
        <div class="HeadingMenu" style="justify-content: flex-start; align-items: center; gap: 72px; display: flex">
            <div class="Logo" style="justify-content: flex-start; align-items: center; gap: 2px; display: flex">

                <TelerikButton OnClick="@SayHelloHandler"
               ThemeColor="@ThemeConstants.Button.ThemeColor.Primary">Say Hello</TelerikButton>

               <div>@HelloString</div>

               
            </div>
            <div class="MenuItems"
                style="justify-content: flex-start; align-items: flex-start; gap: 4px; display: flex">
                <div class="MenuItem"
                    style="padding-left: 12px; padding-right: 12px; padding-top: 6px; padding-bottom: 6px; border-radius: 8px; border: 1px rgba(255, 255, 255, 0) solid; justify-content: center; align-items: center; gap: 8px; display: flex">
                    <div class="Label"
                        style="text-align: center; color: #068597; font-size: 16px; font-family: Roboto; font-weight: 500; line-height: 24px; word-wrap: break-word">
                        Teams</div>
                </div>
                <div class="MenuItem"
                    style="padding-left: 12px; padding-right: 12px; padding-top: 6px; padding-bottom: 6px; border-radius: 8px; border: 1px rgba(255, 255, 255, 0) solid; justify-content: center; align-items: center; gap: 8px; display: flex">
                    <div class="Label"
                        style="text-align: center; color: #068597; font-size: 16px; font-family: Roboto; font-weight: 500; line-height: 24px; word-wrap: break-word">
                        Plans</div>
                </div>
                <div class="MenuItem"
                    style="padding-left: 12px; padding-right: 12px; padding-top: 6px; padding-bottom: 6px; border-radius: 8px; border: 1px rgba(255, 255, 255, 0) solid; justify-content: center; align-items: center; gap: 8px; display: flex">
                    <div class="Label"
                        style="text-align: center; color: #068597; font-size: 16px; font-family: Roboto; font-weight: 500; line-height: 24px; word-wrap: break-word">
                        Apps</div>
                </div>
            </div>
        </div>
        <div class="Frame1" style="justify-content: flex-end; align-items: center; gap: 8px; display: flex">
            <div class="Icons" style="justify-content: center; align-items: center; gap: 8px; display: flex">
                <div class="Avatar"
                    style="width: 30px; height: 30px; border-radius: 9999px; justify-content: flex-start; align-items: flex-start; display: flex">
                    <div class="BaseAvatar"
                        style="flex: 1 1 0; align-self: stretch; border-radius: 9999px; overflow: hidden; flex-direction: column; justify-content: center; align-items: center; display: inline-flex">
                        <img class="Image" style="width: 30px; height: 30px; position: relative"
                            src="https://via.placeholder.com/30x30" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {

}

@code {
private MarkupString HelloString { get; set; } = (MarkupString)"Hi";

private void SayHelloHandler()
   {
       string msg = string.Format("Hello from <strong>Telerik UI for Blazor</strong> at {0}.<br /> Now you can use C# to write front-end!", DateTime.Now);
       HelloString = new MarkupString(msg);
       StateHasChanged();
   }
}