<div class="container bg-white border rounded p-4">
    <div class="form-group mb-3">
        <div class="d-flex justify-content-between">
            <input type="text" @bind="NewTaskTitle" class="form-control" placeholder="Enter new task..." />
            <button @onclick="AddTaskHandler" class="btn btn-primary">Add</button>
        </div>
    </div>

    <div class="mb-3">
        <hr />
    </div>

    @foreach (var task in TaskItems)
    {
        <div class="row mb-3">
            <div class="col">
                <div class="input-group">
                    <div class="input-group-text">
                        <input type="checkbox" @bind="@task.Completed" />
                    </div>
                    <input type="text" @bind="@task.Title" class="form-control" />
                </div>
            </div>
            <div class="col-1">
                <div class="d-flex justify-content-center">
                    <span class="telerik-blazor k-button-icon k-icon k-svg-icon k-svg-i-calendar text-danger" style="cursor: pointer;" @onclick="@(e => DeleteTaskHandler(task))">
                        <svg viewBox="0 0 512 512">
                            <path d="M416 96h-96V64c0-17.6-14.4-32-32-32h-96c-17.6 0-32 14.4-32 32v32H64v64h32v288c0 17.6 14.4 32 32 32h224c17.6 0 32-14.4 32-32V160h32zM192 64h95.9l.1.1V96h-96c.1-.1.1-32.1 0-32m160 384H128.1l-.1-.1V160h32v256h32V160h32v256h32V160h32v256h32V160h32z"></path>
                        </svg>
                    </span>
                </div>
            </div>
        </div>
    }
</div>

